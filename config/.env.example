# Environment Variables for ComBadge Configuration
# Copy this file to .env and customize values for your deployment
# These variables override configuration file settings

# Environment Configuration
COMBADGE_ENV=development

# LLM Configuration
COMBADGE_LLM_BASE_URL=http://localhost:11434
COMBADGE_LLM_MODEL=qwen2.5:14b
COMBADGE_LLM_TEMPERATURE=0.1
COMBADGE_LLM_MAX_TOKENS=2048
COMBADGE_LLM_TIMEOUT=30

# API Configuration
COMBADGE_API_BASE_URL=https://fleet-api.company.com
COMBADGE_API_TIMEOUT=30
COMBADGE_API_RETRY_ATTEMPTS=3
COMBADGE_API_VERIFY_SSL=true

# Authentication (use secure values in production)
COMBADGE_API_AUTHENTICATION_METHOD=cookie
COMBADGE_API_AUTHENTICATION_TOKEN_URL=https://api.company.com/oauth/token
COMBADGE_API_AUTHENTICATION_CLIENT_ID=your_client_id_here
COMBADGE_API_AUTHENTICATION_CLIENT_SECRET=your_client_secret_here
COMBADGE_API_AUTHENTICATION_API_KEY=your_api_key_here
COMBADGE_API_AUTHENTICATION_USERNAME=your_username_here
COMBADGE_API_AUTHENTICATION_PASSWORD=your_password_here

# UI Configuration
COMBADGE_UI_THEME=dark
COMBADGE_UI_FONT_SIZE=12
COMBADGE_UI_AUTO_APPROVE_HIGH_CONFIDENCE=false
COMBADGE_UI_CONFIDENCE_THRESHOLD=0.95

# Processing Configuration
COMBADGE_PROCESSING_CONFIDENCE_THRESHOLD=0.8
COMBADGE_PROCESSING_MAX_PROCESSING_TIME=60
COMBADGE_PROCESSING_ENABLE_CACHING=true
COMBADGE_PROCESSING_CACHE_TTL=3600

# Logging Configuration
COMBADGE_LOGGING_LEVEL=INFO
COMBADGE_LOGGING_FILE_PATH=logs/combadge.log
COMBADGE_LOGGING_AUDIT_ENABLED=true
COMBADGE_LOGGING_LOG_TO_CONSOLE=true

# Feature Flags
COMBADGE_ENABLE_HOT_RELOAD=true
COMBADGE_ENABLE_AUTO_BACKUP=true
COMBADGE_ENABLE_TELEMETRY=false
COMBADGE_DEBUG_MODE=false

# Proxy Configuration (if needed)
COMBADGE_API_PROXY_URL=http://proxy.company.com:8080
HTTP_PROXY=http://proxy.company.com:8080
HTTPS_PROXY=http://proxy.company.com:8080
NO_PROXY=localhost,127.0.0.1,.local

# Database Configuration (if using external database)
COMBADGE_DATABASE_URL=postgresql://user:pass@localhost:5432/combadge
COMBADGE_DATABASE_POOL_SIZE=10

# Security Configuration
COMBADGE_SECRET_KEY=your-secret-key-here
COMBADGE_ENCRYPTION_KEY=your-encryption-key-here

# Monitoring and Observability
COMBADGE_METRICS_ENABLED=true
COMBADGE_METRICS_PORT=9090
COMBADGE_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Example values for different environments:
# 
# Development:
# COMBADGE_ENV=development
# COMBADGE_DEBUG_MODE=true
# COMBADGE_LOGGING_LEVEL=DEBUG
# COMBADGE_API_VERIFY_SSL=false
# 
# Staging:
# COMBADGE_ENV=staging
# COMBADGE_DEBUG_MODE=false
# COMBADGE_LOGGING_LEVEL=INFO
# COMBADGE_ENABLE_TELEMETRY=true
# 
# Production:
# COMBADGE_ENV=production
# COMBADGE_DEBUG_MODE=false
# COMBADGE_LOGGING_LEVEL=WARNING
# COMBADGE_ENABLE_TELEMETRY=true
# COMBADGE_ENABLE_AUTO_BACKUP=true